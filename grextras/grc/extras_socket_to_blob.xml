<?xml version="1.0"?>
<!--
###################################################
## Socket to blob - blob msg output
###################################################
 -->
<block>
    <name>Extras: Socket to Blob</name>
    <key>extras_socket_to_blob</key>
    <import>import gnuradio.extras as gr_extras</import>
    <make>gr_extras.socket_to_blob($proto, $addr, $port, $mtu)</make>
    <param>
        <name>Protocol</name>
        <key>proto</key>
        <value>UDP</value>
        <type>string</type>
        <option><name>UDP</name><key>UDP</key></option>
        <option><name>TCP</name><key>TCP</key></option>
    </param>
    <param>
        <name>Address</name>
        <key>addr</key>
        <value>127.0.0.1</value>
        <type>string</type>
    </param>
    <param>
        <name>Port</name>
        <key>port</key>
        <value>12345</value>
        <type>string</type>
    </param>
    <param>
        <name>MTU</name>
        <key>mtu</key>
        <value>0</value>
        <type>int</type>
        <hide>#if $mtu() == 0 then 'part' else 'none'#</hide>
    </param>
    <source>
        <name>out</name>
        <type></type>
    </source>
</block>
