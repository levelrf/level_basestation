<?xml version="1.0"?>
<!--
###################################################
##Packet Encoder
###################################################
 -->
<block>
    <name>Extras: Packet Framer</name>
    <key>extras_packet_framer</key>
    <import>import gnuradio.extras as gr_extras</import>
    <make>gr_extras.packet_framer(
    samples_per_symbol=$samples_per_symbol,
    bits_per_symbol=$bits_per_symbol,
    access_code=$access_code,
)</make>
    <param>
        <name>Samples/Symbol</name>
        <key>samples_per_symbol</key>
        <type>int</type>
    </param>
    <param>
        <name>Bits/Symbol</name>
        <key>bits_per_symbol</key>
        <type>int</type>
    </param>
    <param>
        <name>Access Code</name>
        <key>access_code</key>
        <value></value>
        <type>string</type>
    </param>
    <sink>
        <name>in</name>
        <type></type>
    </sink>
    <source>
        <name>out</name>
        <type>byte</type>
    </source>
    <doc>
Packet encoder block, for use with the gnuradio modulator blocks: gmsk, dpsk, qam.

Access Code: string of 1's and 0's, leave blank for automatic.

Bits/Symbol should be set accordingly:
    gmsk -> 1
    dbpsk -> 1
    dqpsk -> 2
    d8psk -> 3
    qam8 -> 3
    qam16 -> 4
    qam64 -> 6
    qam256 -> 8
    </doc>
</block>
