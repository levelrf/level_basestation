<?xml version="1.0"?>
<!--
###################################################
## Blob to stream - blob msg input
###################################################
 -->
<block>
    <name>Extras: Blob to Stream</name>
    <key>extras_blob_to_stream</key>
    <import>import gnuradio.extras as gr_extras</import>
    <make>gr_extras.blob_to_stream($item_size)</make>
    <param>
        <name>Output Item Size</name>
        <key>item_size</key>
        <value>1</value>
        <type>int</type>
    </param>
    <sink>
        <name>in</name>
        <type></type>
    </sink>
    <source>
        <name>out</name>
        <type>byte</type>
        <vlen>$item_size</vlen>
    </source>
</block>
