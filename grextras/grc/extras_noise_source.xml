<?xml version="1.0"?>
<!--
###################################################
##Noise source block
###################################################
 -->
<block>
    <name>Extras: Noise Source</name>
    <key>extras_noise_source</key>
    <import>import gnuradio.extras as gr_extras</import>
    <make>gr_extras.noise_source_$(type)($seed)
self.$(id).set_waveform($wave)
self.$(id).set_offset($off)
self.$(id).set_amplitude($scalar)
self.$(id).set_factor($factor)</make>
    <callback>set_waveform($wave)</callback>
    <callback>set_offset($off)</callback>
    <callback>set_amplitude($scalar)</callback>
    <callback>set_factor($factor)</callback>
    <param>
        <name>Output Type</name>
        <key>type</key>
        <value>fc32</value>
        <type>enum</type>
        <option><name>FC32</name><key>fc32</key></option>
        <option><name>F32</name><key>f32</key></option>
        <option><name>SC32</name><key>sc32</key></option>
        <option><name>S32</name><key>s32</key></option>
        <option><name>SC16</name><key>sc16</key></option>
        <option><name>S16</name><key>s16</key></option>
        <option><name>SC8</name><key>sc8</key></option>
        <option><name>S8</name><key>s8</key></option>
    </param>
    <param>
        <name>Waveform</name>
        <key>wave</key>
        <value>GAUSSIAN</value>
        <type>string</type>
        <option><name>Uniform</name><key>UNIFORM</key></option>
        <option><name>Gaussian</name><key>GAUSSIAN</key></option>
        <option><name>Laplacian</name><key>LAPLACIAN</key></option>
        <option><name>Impulse</name><key>IMPLUSE</key></option>
    </param>
    <param>
        <name>Seed</name>
        <key>seed</key>
        <value>-42</value>
        <type>int</type>
    </param>
    <param>
        <name>Offset</name>
        <key>off</key>
        <value>0</value>
        <type>complex</type>
    </param>
    <param>
        <name>Scalar</name>
        <key>scalar</key>
        <value>1.0</value>
        <type>complex</type>
    </param>
    <param>
        <name>Factor</name>
        <key>factor</key>
        <value>9.0</value>
        <type>real</type>
        <hide>'part'</hide>
    </param>
    <source>
        <name>out</name>
        <type>$type</type>
    </source>
</block>
