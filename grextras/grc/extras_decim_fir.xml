<?xml version="1.0"?>
<!--
###################################################
##Decimating FIR Filter
###################################################
 -->
<block>
    <name>Extras: Decimating FIR Filter</name>
    <key>extras_decim_fir</key>
    <import>import gnuradio.extras as gr_extras</import>
    <import>from gnuradio.gr import firdes</import>
    <make>gr_extras.decim_fir_$(type)($taps, $decim)</make>
    <callback>set_taps($taps)</callback>
    <param>
        <name>Type</name>
        <key>type</key>
        <type>enum</type>
        <option>
            <name>FC32 IO, FC32 Taps</name>
            <key>fc32_fc32_fc32</key>
        </option>
        <option>
            <name>F32 IO, F32 Taps</name>
            <key>f32_f32_f32</key>
        </option>
    </param>
    <param>
        <name>Decimation</name>
        <key>decim</key>
        <value>1</value>
        <type>int</type>
    </param>
    <param>
        <name>Taps</name>
        <key>taps</key>
        <type>complex_vector</type>
    </param>
    <sink>
        <name>in</name>
        <type>$(str($type).split('_')[0])</type>
    </sink>
    <source>
        <name>out</name>
        <type>$(str($type).split('_')[2])</type>
    </source>
</block>
